{
  "name": "minipopsnative",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "hardReset": "watchman watch-del-all && rm -rf node_modules && yarn install && rm -rf /tmp/metro-bundler-cache-* && rm -rf haste-map-react-native-packager-*",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "xcodeSchemes": {
    "Debug": [
      "Debug"
    ],
    "projectDirectory": "ios"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "babel": {
    "presets": [
      "react-native"
    ],
    "plugins": [
      "transform-decorators"
    ]
  },
  "eslintConfig": {
    "extends": [
      "plugin:prettier/recommended"
    ],
    "rules": {
      "semi": [
        "error",
        "never"
      ]
    }
  },
  "eslintIgnore": [
    "/build/",
    "/config/",
    "/dist/",
    "/test/unit/coverage/"
  ],
  "dependencies": {
    "@aws-amplify/analytics": "^1.0.3",
    "@aws-amplify/pushnotification": "^1.0.3",
    "appcenter": "^1.7.1",
    "appcenter-analytics": "^1.7.1",
    "appcenter-crashes": "^1.7.1",
    "aws-amplify": "^1.0.4",
    "aws-amplify-react-native": "^1.0.4",
    "axios": "^0.18.0",
    "lodash": "^4.17.10",
    "react": "16.3.1",
    "react-native": "0.55.4",
    "react-native-animatable": "^1.3.0",
    "react-native-blur": "^3.2.2",
    "react-native-config": "^0.11.5",
    "react-native-fast-image": "^4.0.14",
    "react-native-keyboard-aware-scroll-view": "^0.7.1",
    "react-native-linear-gradient": "^2.4.0",
    "react-native-swipe-gestures": "^1.0.2",
    "react-native-typography": "^1.3.0",
    "redux-xstate": "^0.1.3",
    "reselect": "^3.0.1",
    "uuid": "^3.3.2",
    "xstate": "^3.3.2"
  },
  "devDependencies": {
    "babel-jest": "23.0.1",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-transform-decorators": "^6.24.1",
    "babel-preset-react-native": "4.0.0",
    "d3-interpolate": "^1.2.0",
    "eslint": "^5.2.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.1",
    "husky": "^1.0.0-rc.9",
    "jest": "23.1.0",
    "precise-commits": "^1.0.2",
    "prettier": "^1.13.5",
    "pretty-quick": "^1.6.0",
    "react-native-navigation": "^1.1.471",
    "react-native-svg": "^6.5.0",
    "react-native-swipe-list-view": "^1.3.1",
    "react-native-vector-icons": "^4.6.0",
    "react-redux": "^5.0.7",
    "react-test-renderer": "16.3.1",
    "redux": "^4.0.0",
    "styled-components": "^3.3.3"
  },
  "jest": {
    "preset": "react-native",
    "setupFiles": [
      "<rootDir>/node_modules/appcenter/test/AppCenterMock.js",
      "<rootDir>/node_modules/appcenter-analytics/test/AppCenterAnalyticsMock.js",
      "<rootDir>/node_modules/appcenter-crashes/test/AppCenterCrashesMock.js"
    ]
  }
}
